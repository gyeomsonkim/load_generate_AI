# Application Settings
APP_NAME="Pathfinding Server"
APP_VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pathfinding_db
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Storage
STORAGE_TYPE=local  # local or minio
STORAGE_PATH=./storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=pathfinding-maps
MINIO_SECURE=False

# ML Settings (Phase 2)
ML_MODEL_PATH=./ml_models
ML_DEVICE=cpu  # cpu or cuda
ML_BATCH_SIZE=4

# Pathfinding Settings
MAX_PATH_DISTANCE=10000  # Maximum pixels for path search
DEFAULT_WALKWAY_WIDTH=10  # Pixels
PATH_SMOOTHING=True
CACHE_PATHS=True

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30